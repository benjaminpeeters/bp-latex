%=====================================================================
% BOOLEAN FLAGS
%=====================================================================

\newif\ifbp@draft      \bp@draftfalse
\newif\ifbp@todo       \bp@todofalse
\newif\ifbp@blind      \bp@blindfalse
\newif\ifbp@colorlinks \bp@colorlinkstrue
\newif\ifbp@colorsimple\bp@colorsimplefalse

% Package options
\DeclareOption{draft}{\bp@drafttrue\bp@todotrue}
\DeclareOption{final}{\bp@draftfalse\bp@todofalse}
\DeclareOption{todo}{\bp@todotrue}
\DeclareOption{notodo}{\bp@todofalse}
\DeclareOption{blind}{\bp@blindtrue}
\DeclareOption{colorlinks}{\bp@colorlinkstrue}
\DeclareOption{nocolorlinks}{\bp@colorlinksfalse}
\DeclareOption{colorsimple}{\bp@colorsimpletrue}
\ProcessOptions\relax

